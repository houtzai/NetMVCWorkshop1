@model IEnumerable<NETMVCWorkshop1.Models.BOOK_DATA>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BOOK_CLASS_ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BOOK_NAME)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BOOK_BOUGHT_DATE)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BOOK_STATUS)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BOOK_KEEPER)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.BOOK_CLASS_ID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BOOK_NAME)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BOOK_BOUGHT_DATE)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BOOK_STATUS)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BOOK_KEEPER)
        </td>
        <td>
            @Html.ActionLink("編輯", "Edit", new { b_id = item.BOOK_ID })
            @using (Html.BeginForm("Delete", "Book", FormMethod.Post, new { @class = "Delete" }))
            {
                @Html.AntiForgeryToken();
                @Html.Hidden("b_id", item.BOOK_ID);
                <input type="submit" value="刪除" class="btn btn-default">
            }
        </td>
    </tr>
}

</table>
